        android:id="@+id/tv_4"
        android:layout_marginRight="20dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_5"
        android:layout_marginRight="20dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_6"
        android:layout_marginRight="40dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_7"
        android:layout_marginRight="20dp"
        android:textSize="25dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_8"
        android:layout_marginRight="20dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>